{% # theme-check-disable %}
{% if settings.type_font_custom %}
  <link
    rel="preload"
    as="font"
    href="{{ 'stevie-sans.woff2' | asset_url }}"
    type="font/woff2"
    crossorigin
    fetchpriority="high"
  >
  <style>
    @font-face {
      font-family: "Stevie Sans";
      src: url("{{ 'stevie-sans.woff2' | asset_url }}") format("woff2");
    }
  </style>
{% else %}
  {% assign font_settings = 'type_body_font,
     type_subheading_font,
     type_heading_font,
     type_accent_font'
    | split: ','
  %}

  {% for font in font_settings %}
    {% assign current_font = settings[font] %}
    {% unless current_font.system? %}
      <link
        rel="preload"
        as="font"
        href="{{ current_font | font_url }}"
        type="font/woff2"
        crossorigin
        fetchpriority="low"
      >
    {% endunless %}
  {% endfor %}
{% endif %}

{% # theme-check-enable %}
