<div class="mega-menu__item">
  <ul class="sub-menu">
    {% for link in block.settings.menu.links %}
      <li class="sub-menu__item">
        <a href="{{ link.url }}" class="sub-menu__link">{{ link.title }}</a>
      </li>
    {% endfor %}
  </ul>
</div>

{% schema %}
{
  "name": "Menu",
  "tag": null,
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu"
    }
  ],
  "presets": [
    {
      "name": "Menu"
    }
  ]
}
{% endschema %}
